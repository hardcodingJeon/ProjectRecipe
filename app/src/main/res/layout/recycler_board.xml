<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/borderline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incl01"
        />



    <RelativeLayout
        android:id="@+id/relative01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incl01"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테스트용 유저 아이디"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/circleimg"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테스트용 날짜"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="테스트용 메세지"
        android:textSize="18sp"
        android:textColor="#FF000000"
        android:layout_below="@id/relative01"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tv_msg"
        android:src="@drawable/ic_launcher_background"
        />

    <ToggleButton
        android:id="@+id/tb_favor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/favor"
        android:layout_below="@id/iv_main"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:textOff=" "
        android:textOn=" "
        />
    <TextView
        android:id="@+id/tv_favor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="갯수"
        android:layout_below="@id/iv_main"
        android:layout_toRightOf="@id/tb_favor"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat"
        android:layout_below="@id/iv_main"
        android:layout_toRightOf="@id/tv_favor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="갯수"
        android:layout_below="@id/iv_main"
        android:layout_toRightOf="@id/iv_chat"
        android:layout_marginTop="10dp"
        />



</RelativeLayout>