<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#88000000">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_black_24dp"
        android:scaleType="center"
        android:background="@drawable/bg_circle"
        android:layout_margin="10dp"
        android:visibility="invisible"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_back"
        android:layout_above="@id/iv_b"
        app:cardCornerRadius="7dp"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            >
            
            <TextView
                android:id="@+id/tv_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료"
                android:textSize="20sp"
                android:textColor="#FF000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#22000000"
                android:layout_below="@id/tv_material"
                android:layout_margin="10dp"
                />
            
            <TextView
                android:id="@+id/tv_ess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:text="테스트용 ess"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_essMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ess"
                android:text="테스트용 msg"
                android:textColor="#FF000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/tv_choi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_essMsg"
                android:text="테스트용 ess"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_choiMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_choi"
                android:text="테스트용 msg"
                android:textColor="#FF000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/tv_sour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_choiMsg"
                android:text="테스트용 ess"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_sourMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sour"
                android:text="테스트용 msg"
                android:textColor="#FF000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/iv_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_black_24dp"
        android:background="@drawable/bg_circle"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>